<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<%= form_tag posts_path, :method => "get" do %>
  <%= label_tag(:search, "Post title") %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag("Search", :name => nil) %>
<% end %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title%></td>
        <div class="btn-group" role="group">
        <td>
          <% if can? :read, post %>
           <button><%= link_to 'Show', post %></td></button>
          <% end %>
        <td>
          <% if can? :edit, post %>
           <button><%= link_to 'Edit', edit_post_path(post) %></button>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, post %>
           <button><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          <% end %>
        </td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
